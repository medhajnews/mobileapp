<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context=".ArticleActivity"
    tools:showIn="@layout/activity_article">

    <com.github.ksoichiro.android.observablescrollview.ObservableScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:contentDescription="@string/article_main_image"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="16dp"
                android:clickable="false"
                android:text="Why relying on your memory could compromise your security"
                android:textColor="@color/article_title"
                android:textIsSelectable="false"
                android:textSize="24sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_author"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="by Anubhav"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/article_info"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/content_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Jun 3, 2016"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:textColor="@color/article_info"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:clickable="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/content_area"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="Delhi"
                    android:textAlignment="textStart"
                    android:textAllCaps="true"
                    android:textColor="@color/article_info"
                    android:textSize="13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/content_update_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:text="9:00 PM"
                    android:textAlignment="textEnd"
                    android:textAllCaps="true"
                    android:textColor="@color/article_info"
                    android:textSize="13sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:clickable="false"
                android:focusable="false"
                android:lineSpacingExtra="2dp"
                android:paddingBottom="50dp"
                android:text="@string/sample_content_text"
                android:textColor="@color/article_content"
                android:textSize="16sp" />
            <!--justify-->
        </LinearLayout>
    </com.github.ksoichiro.android.observablescrollview.ObservableScrollView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:animateLayoutChanges="true"
        android:layout_alignParentBottom="true"
        app:cardElevation="6dp"
        android:id="@+id/bottom_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="56dp"
            android:id="@+id/bottom_button_bar_linear_layout">

            <ImageView
                android:id="@+id/font"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_text_size"/>

            <ImageView
                android:id="@+id/color"
                android:padding="12dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_night_mode_toggle"/>

            <ImageView
                android:id="@+id/bookmark"
                android:layout_width="0dp"
                android:padding="12dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save_offline"/>

            <ImageView
                android:id="@+id/share"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>